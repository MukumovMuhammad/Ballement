@export var destination_portal : NodePath
@export var offset : Vector2 = Vector2.ZERO
func _on_body_entered(body):
	if body.is_in_group(\"portble\"):
		if body.is_in_group(\"rigid\"):
			Teleport_rigid(body)
		else:
			teleport(body)
		


func teleport(entity):
	var destination = get_node(destination_portal)
	print(\"Teleporting from d  \", entity.position)
	

	entity.global_position = destination.position + offset
	print(\"Teleported to  \", entity.global_position)



func Teleport_rigid(entity):
	var destination = get_node(destination_portal)
	
	
	var new_pos = destination.position + offset
	entity.Teleport(new_pos)
	
